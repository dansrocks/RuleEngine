<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Ruler Test Suite">
            <directory suffix="Test.php">./tests/Ruler/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src/</directory>
            <exclude>
                <directory suffix=".php">./src/TestingRules</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>

